<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.neoturbine.veles">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".QSOListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QSODetailActivity"
            android:label="@string/title_qso_detail"
            android:parentActivityName=".QSOListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.neoturbine.veles.QSOListActivity" />
        </activity>

        <provider
            android:name=".VelesProvider"
            android:authorities="net.neoturbine.veles.provider.qso"
            android:enabled="true"
            android:exported="false"></provider>
    </application>

</manifest>