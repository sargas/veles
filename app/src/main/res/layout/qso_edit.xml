<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/text_margin"
              android:orientation="vertical"
              tools:context="net.neoturbine.veles.QSOEditFragment">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/qso_station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/qso_edit_station"
            android:inputType="textNoSuggestions|textCapCharacters"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/qso_edit_start_time"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/qso_pick_start_date"
            style="@android:style/Widget.DeviceDefault.Light.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/qso_pick_start_time"
            style="@android:style/Widget.DeviceDefault.Light.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/qso_edit_end_time"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/qso_pick_end_date"
            style="@android:style/Widget.DeviceDefault.Light.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/qso_pick_end_time"
            style="@android:style/Widget.DeviceDefault.Light.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/qso_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/qso_edit_mode"
            android:inputType="text"/>

    </android.support.design.widget.TextInputLayout>

    <net.neoturbine.veles.FrequencySelectorView
        android:id="@+id/qso_tx_freq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/qso_edit_tx_freq"/>

    <net.neoturbine.veles.FrequencySelectorView
        android:id="@+id/qso_rx_freq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hint="@string/qso_edit_rx_freq"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/qso_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/qso_edit_comment"
            android:inputType="textMultiLine"
            android:lines="3"/>

    </android.support.design.widget.TextInputLayout>

</LinearLayout>
